<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context="com.coder.live.Activity.LiveActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <ListView
            android:scrollbars="none"
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="00dp"
            android:layout_marginTop="100dp"
            android:layout_weight="8"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:stackFromBottom="true"></ListView>


        <Button
            android:id="@+id/camera_change"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/camera_change"
            android:onClick="camera_change" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/icon_message"
            android:onClick="sendtext" />

        <EditText
            android:id="@+id/edtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="20dp"
            android:textColor="#fff" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/livelinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="2"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:visibility="gone">


    </LinearLayout>

</LinearLayout>
